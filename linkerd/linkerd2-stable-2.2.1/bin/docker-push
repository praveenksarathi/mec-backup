#!/bin/bash

set -eu

if [ $# -eq 1 ]; then
    tag="${1:-}"
else
    echo "usage: $(basename $0) tag" >&2
    exit 64
fi

bindir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

. $bindir/_docker.sh

for img in cli-bin cni-plugin controller grafana proxy proxy-init web  ; do
    docker_push "$img" "$tag"
done
